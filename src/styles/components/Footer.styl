.Footer
    color gray
    background #1d1f24
    display grid
    padding-left 20px
    grid-template-areas "Deck""Social""Nav"
    .Footer__Deck
        grid-area Deck
        display flex
        flex-flow column
    .Footer__Social
        grid-area Social
        display grid
        grid-template-areas: "form""network"
        .Social__form
            grid-area form
        .Social__network
            grid-area network
            display: flex
            .network__iconsContainer
                display: flex
                justify-content: space-around

@media screen and (min-width 767px)
    .Footer
        grid-template-areas "Deck Nav""Social Social"

@media screen and (min-width 1024px)
    .Footer
        grid-template-areas "Deck Nav Social"





